page {
  background: #ededed; }

.wrap {
  padding: 30rpx;
  background: #fff; }
  .wrap .top-nav {
    border: 2rpx solid #1b65ce;
    margin: 0 auto;
    width: 70%;
    display: flex;
    border-radius: 3px; }
    .wrap .top-nav view {
      width: 50%;
      padding: 20rpx 0;
      text-align: center;
      color: #1b65ce; }
      .wrap .top-nav view.active {
        background: #1b65ce;
        color: #fff; }

.trade-wrap {
  border: 1px solid #ddd;
  border-radius: 3px;
  margin: 20rpx;
  background: #fff; }
  .trade-wrap .title {
    display: flex;
    padding: 20rpx 20rpx;
    border-bottom: 2px solid #1b65ce;
    color: #1b65ce; }
    .trade-wrap .title .text {
      width: 60%;
      font-size: 40rpx;
      padding-left: 8rpx;
      border-left: 2rpx solid #1b65ce; }
    .trade-wrap .title .choose-wrap {
      width: 40%;
      display: flex;
      font-size: 32rpx; }
      .trade-wrap .title .choose-wrap view {
        width: 50%;
        text-align: center;
        background: url(data:image/png;base64,) no-repeat;
        background-size: 35rpx 35rpx; }
        .trade-wrap .title .choose-wrap view.active {
          background: url(data:image/png;base64,) no-repeat;
          background-size: 35rpx 35rpx;
          color: #ddd; }
  .trade-wrap .trade-record {
    margin: 0 20rpx;
    border-left: 2rpx solid #ddd;
    padding: 10rpx 0; }
    .trade-wrap .trade-record:last-child .bottom,
    .trade-wrap .trade-record:last-child .earnings {
      border-bottom: none; }
    .trade-wrap .trade-record .top {
      display: flex;
      justify-content: space-between;
      margin-left: 28rpx;
      margin-bottom: 20rpx;
      font-size: 36rpx;
      padding-top: 10rpx;
      position: relative; }
      .trade-wrap .trade-record .top .circle {
        position: absolute;
        background: #fff;
        width: 20rpx;
        height: 20rpx;
        border: 2rpx solid #1b65ce;
        border-radius: 100%;
        top: 50%;
        margin-top: -10rpx;
        left: -37rpx; }
    .trade-wrap .trade-record .bottom {
      display: flex;
      justify-content: space-between;
      border-bottom: 2rpx solid #ddd;
      margin-left: 20rpx;
      padding-bottom: 20rpx; }
      .trade-wrap .trade-record .bottom image {
        width: 40rpx;
        height: 40rpx;
        margin-left: 8rpx; }
      .trade-wrap .trade-record .bottom text {
        color: #fb565c; }
    .trade-wrap .trade-record .earnings {
      border-bottom: 2rpx solid #ddd;
      margin-left: 20rpx;
      padding-bottom: 20rpx; }
      .trade-wrap .trade-record .earnings text {
        color: #fb565c; }
