page {
  background: #ededed;
  padding: 20rpx;
  width: auto; }

.item {
  margin-top: 10rpx;
  border: 1px solid #ddd;
  border-radius: 5px;
  background: #fff;
  padding: 20rpx;
  position: relative; }
  .item .name {
    line-height: 45rpx;
    font-size: 36rpx;
    color: #1b65ce; }
  .item .account {
    margin-top: 20rpx;
    font-size: 32rpx;
    color: #666; }
    .item .account text {
      color: #333; }
  .item .operation {
    padding-left: 50rpx;
    margin-top: 20rpx;
    color: #1b65ce;
    font-size: 32rpx;
    background: url(data:image/png;base64,) no-repeat;
    background-size: 32rpx 32rpx; }
    .item .operation text {
      color: #333;
      margin-left: 10rpx; }
  .item .type {
    position: absolute;
    right: 20px;
    bottom: 10px;
    width: 40px;
    height: 20px;
    color: #1b65ce;
    font-size: 30rpx;
    text-align: center;
    line-height: 20px;
    background: url(../../images/account/system/bg_blue.png) no-repeat;
    background-size: 40px 20px; }
