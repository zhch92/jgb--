page {
  background: #f2f2f2;
  padding: 20rpx;
  width: auto; }

.item {
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 3px; }
  .item .name {
    padding: 20rpx 0;
    border-bottom: 2rpx solid #1b65ce;
    font-size: 42rpx;
    color: #1b65ce;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis; }
    .item .name text {
      padding: 10rpx 6rpx;
      border-left: 2rpx solid #1b65ce; }
  .item .product {
    background: #fff;
    position: relative; }
    .item .product .btn-wrap {
      position: absolute;
      right: 0px;
      width: 150rpx;
      padding: 10rpx 40rpx;
      top: 50%;
      margin-top: -30rpx;
      background: #fff; }
      .item .product .btn-wrap .btn {
        border: 2rpx solid #1b65ce;
        border-radius: 3px;
        color: #1b65ce;
        text-align: center;
        line-height: 50rpx; }
        .item .product .btn-wrap .btn.solid {
          background: #1b65ce;
          color: #fff;
          margin-top: 20rpx; }
    .item .product .row {
      padding: 30rpx 0;
      padding-left: 10rpx;
      border-bottom: 1px solid #ddd;
      font-size: 32rpx;
      color: #000;
      line-height: 1rem; }
      .item .product .row .block {
        display: inline-block;
        margin-right: 20px;
        color: #333; }
        .item .product .row .block text {
          margin-left: 10px; }
      .item .product .row text {
        color: #000;
        margin-left: 10rpx; }
      .item .product .row:first-child {
        color: #333;
        border-bottom: none; }
        .item .product .row:first-child .prodName {
          display: inline-block;
          max-width: 84%; }
        .item .product .row:first-child .post {
          position: relative;
          top: -27rpx; }
        .item .product .row:first-child text {
          display: inline-block;
          border: 1px solid #1b65ce;
          border-radius: 3px;
          color: #1b65ce;
          font-size: 24rpx;
          padding: 4rpx 10rpx;
          vertical-align: middle; }
        .item .product .row:first-child .current {
          color: #fb565c;
          border-color: #fb565c; }
      .item .product .row:nth-child(2) text {
        color: #1b65ce;
        font-size: 40rpx; }
